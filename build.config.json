{
  "srcPath": "src",
  "buildPath": "build",
  "productionPath": "product",
  "src": {
    "js": [
      "js/**/*.js"
    ],
    "css": [
      "css/**/*.css"
    ],
    "postcss": [
      "postcss/front/**/*.pcss",
      "!postcss/front/constant.pcss"
    ],
    "mixinsDir": "postcss/mixins/",
    "importPostcss": "postcss/front/**/*.pcss",
    "img": [
      "img/**/*.*"
    ],
    "fonts": [
      "fonts/**/*.*"
    ],
    "html": [
      "*.html"
    ]
  },
  "change": {
    "postcss": {
      "postcss/front/": "css/"
    }
  },
  "watch": {
    "html": "**/*.html",
    "js": "js/**/*.js",
    "css": "css/**/*.css",
    "postcss": "postcss/**/*.pcss",
    "img": "img/**/*.*",
    "fonts": "fonts/**/*.*"
  },
  "filter": {
    "js": "**/*.js",
    "css": "**/*.css",
    "img": [
      "*.jpg",
      "*.png",
      "*.gif"
    ],
    "fonts": [
      "*.eot",
      "*.woff",
      "*.svg",
      "*.ttf"
    ]
  }
}